<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutShowFragment">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/green">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_back_about"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/txt_show_name_toolbar"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_show"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20sp"/>
            <TextView
                android:id="@+id/txt_show_name"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="Viloyat: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_show_viloyat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farg'ona"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="Shahar, tuman: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_show_shahar_tuman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farg'ona"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="Uyning manzili: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_show_uyning_manzili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farg'ona"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="Passport olgan vaqti: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_show_passport_olgan_vaqti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farg'ona"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="Jinsi: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_show_jinsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erkak"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>